<?php

namespace App\States;

class BlackFreezer extends State
{
    protected int $power = 9000000;
    protected int $energy = 50;

    public function attack(): string
    {
        return "⚫ Black Freezer libera un ataque mortal oscuro.";
    }

    public function defend(int $damage): string
    {
        $this->energy -= $damage / 30;
        return "Black Freezer absorbe el daño sin esfuerzo. Energía: {$this->energy}";
    }
}
